<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:WeatherApp.ViewModels"
             xmlns:models="clr-namespace:WeatherApp.Domain.Models;assembly=WeatherApp.Domain"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WeatherApp.Pages.HomePage"
             x:DataType="viewModels:HomeViewModel">
    <Grid 
        RowDefinitions="50,*">
        
        <Label
            Text="{Binding CurrentWeather.Location.Name}"
            TextColor="{StaticResource Light}"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"/>

        <ScrollView 
            Grid.Row="1">
            
            <VerticalStackLayout>

                <!-- Current Weather -->
                <Grid 
                    RowDefinitions="{OnIdiom Desktop='*', Phone='*,*'}"
                    ColumnDefinitions="{OnIdiom Desktop='*,*', Phone='*'}"
                    VerticalOptions="Center">
                    
                    <VerticalStackLayout
                        Grid.Column="0"
                        Grid.Row="0">
                        <Image
                            Source="{Binding CurrentWeather.Current, Converter={StaticResource WeatherIconConverter}}"
                            HeightRequest="200"
                            WidthRequest="200"/>

                        <Label
                            Text="{Binding CurrentWeather.Current.Temp, StringFormat='{0:F0}°C'}"
                            FontSize="28"
                            TextColor="{StaticResource Light}"
                            HorizontalTextAlignment="Center"/>
                        
                        <Label
                            Text="{Binding CurrentWeather.Current.Condition.Text}"
                            HorizontalTextAlignment="Center"
                            FontSize="24"
                            TextColor="{StaticResource Light}"/>

                    </VerticalStackLayout>
                    <HorizontalStackLayout
                        Grid.Column="{OnIdiom Desktop='1' ,Phone='0'}"
                        Grid.Row="{OnIdiom Desktop='0', Phone='1'}"
                        Margin="0,20,0,0"
                        HorizontalOptions="End">
                        
                        <VerticalStackLayout
                            VerticalOptions="Center"
                            Margin="0,0,20,0">
                            
                            <Label
                                Text="{Binding CurrentWeather.Current.Feelslike,
                                    StringFormat='Feelslike: {0:F0}°C'}"/>
                            <Label 
                                Text="{Binding CurrentWeather.Current.Pressure,
                                    Converter={StaticResource PressureConverter},
                                    StringFormat='Pressure: {0:F0} mmHg'}"/>
                            <Label 
                                Text="{Binding CurrentWeather.Current.Humidity, 
                                    StringFormat='Humidity: {0}%'}"/>
                            <Label
                                Text="{Binding CurrentWeather.Current.Cloud,
                                    StringFormat='Cloud cover: {0} %'}"/>
                            <Label
                                Text="{Binding CurrentWeather.Current.WindDirection, 
                                    StringFormat='Wind Direction: {0}'}"/>
                            <Label
                                Text="{Binding CurrentWeather.Current.Wind,
                                    StringFormat='Wind: {0} km/h'}"/>
                        </VerticalStackLayout>
                        <Border
                            Background="{StaticResource Secondary}"
                            HorizontalOptions="Fill"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12,0,12,0"/>
                            </Border.StrokeShape>
                            
                            <Grid>
                                <!-- Xiaomi (MIUI) Dark Mode bug -->
                                <Image
                                    Source="wind_direction.png"
                                    WidthRequest="{OnIdiom Desktop='240', Phone='200'}"/>

                                <Image
                                    Source="needle.png"
                                    WidthRequest="{OnIdiom Default='48', Phone='36'}"
                                    Rotation="{Binding CurrentWeather.Current.WindDegree}"/>
                            </Grid>
                        </Border>
                    </HorizontalStackLayout>
                </Grid>

                <!-- 24 Hours -->
                <VerticalStackLayout
                    Margin="7,0">
                    
                    <Label
                        Text="Next 24 Hours"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Accent}"
                        Margin="0,12,0,0"/>

                    <ScrollView
                        Orientation="Horizontal"
                        Margin="0,20,0,0">

                        <CollectionView
                            ItemsSource="{Binding Hours}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout
                                    Orientation="Horizontal"
                                    ItemSpacing="20"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Hour">
                                    <VerticalStackLayout
                                        HorizontalOptions="Center"
                                        Margin="0,0,0,15">

                                        <Label
                                            Text="{Binding Time, StringFormat='{0:HH:mm}'}"
                                            TextColor="{StaticResource Light}"
                                            HorizontalTextAlignment="Center"/>

                                        <Image
                                            Source="{Binding ., 
                                                Converter={StaticResource WeatherIconConverter}}"
                                            WidthRequest="48"
                                            HeightRequest="48"/>

                                        <Label 
                                            Text="{Binding Temp, StringFormat='{0:F0}°C'}"
                                            TextColor="{StaticResource Light}"
                                            HorizontalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>

                    <!-- Daily forecast -->
                    <Label
                        Text="Daily Forecast"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Accent}"
                        Margin="0,12,0,0"/>

                    <ScrollView
                        Orientation="Horizontal"
                        Margin="0,20,0,0">

                        <CollectionView
                            ItemsSource="{Binding Days}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout
                                    Orientation="Horizontal"
                                    ItemSpacing="20"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ForecastDay">
                                    <Frame
                                        Background="{StaticResource SecondaryBrush}"
                                        CornerRadius="12"
                                        Padding="15"
                                        Margin="0,0,0,15"
                                        MinimumWidthRequest="256">
                                        <VerticalStackLayout>
                                            <HorizontalStackLayout
                                                VerticalOptions="Center">
                                                
                                                <Image
                                                    Source="{Binding Day.Condition.IconCode, 
                                                        StringFormat='day{0}.png'}"
                                                    WidthRequest="64"
                                                    HeightRequest="64"
                                                    Margin="0,0,22,0"/>

                                                <VerticalStackLayout>
                                                    <Label
                                                        Text="{Binding Date}"
                                                        FontSize="24"
                                                        FontAttributes="Bold"
                                                        VerticalTextAlignment="Center"/>

                                                    <Label
                                                        Text="{Binding Day.Condition.Text}"
                                                        FontSize="18"/>
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>

                                            <Grid ColumnDefinitions="*,*">
                                                <VerticalStackLayout>
                                                    <Label
                                                        Text="Temperature"/>
                                                    
                                                    <Label
                                                        Text="{Binding Day.MaxTemp, StringFormat='Max : {0:F0}°C'}"/>
                                                    
                                                    <Label
                                                        Text="{Binding Day.MinTemp, StringFormat='Min : {0:F0}°C'}"/>
                                                </VerticalStackLayout>
                                                <VerticalStackLayout 
                                                    Grid.Column="1"
                                                    VerticalOptions="End">

                                                    <Label
                                                        Text="{Binding Day.MaxWind ,StringFormat='Wind: {0} km/h'}"/>
                                                    
                                                    <Label
                                                        Text="{Binding Day.ChanceOfRain ,StringFormat='Rain: {0}%'}"/>
                                                </VerticalStackLayout>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </ScrollView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>