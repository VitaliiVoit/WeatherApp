<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:WeatherApp.ViewModels"
             xmlns:model="clr-namespace:WeatherApp.Domain.Models;assembly=WeatherApp.Domain"
             x:Class="WeatherApp.Pages.FavouritesPage"
             x:DataType="viewModel:FavouritesViewModel">
    <Grid
        RowDefinitions="50,*">

        <HorizontalStackLayout
            HorizontalOptions="Center">

            <Image
                Source="loupe.png"
                WidthRequest="32"
                HeightRequest="32"
                HorizontalOptions="Start"/>

            <Entry 
                MaxLength="200"
                WidthRequest="300"/>

        </HorizontalStackLayout>

        <ScrollView
            Grid.Row="1"
            Margin="15,0">

            <CollectionView
                ItemsSource="{Binding FavouriteWeather}">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:CurrentWeather">
                        <Frame
                            Background="{StaticResource Secondary}"
                            CornerRadius="12"
                            Padding="15"
                            Margin="0,10">

                            <VerticalStackLayout>
                                <HorizontalStackLayout>
                                    <Image
                                        Source="{Binding Current, 
                                            Converter={StaticResource WeatherIconConverter}}"
                                        WidthRequest="64"
                                        HeightRequest="64"
                                        Margin="0,0,22,0"/>

                                    <VerticalStackLayout>
                                        <Label
                                            Text="{Binding Location.Name}"
                                            FontSize="24"
                                            FontAttributes="Bold"
                                            VerticalTextAlignment="Center"/>
                                        
                                        <Label
                                            Text="{Binding Location.LocalTime}"
                                            VerticalTextAlignment="Center"/>
                                        
                                        <Label
                                            Text="{Binding Current.Condition.Text}"
                                            VerticalTextAlignment="Center"/>
                                    </VerticalStackLayout>
                                    
                                </HorizontalStackLayout>
                                <Label
                                    Text="{Binding Current.Temp, 
                                        StringFormat='Temperature : {0:F0}°C'}"/>
                                <Label
                                    Text="{Binding Current.Feelslike, 
                                        StringFormat='Feelslike : {0:F0}°C'}"/>
                                <Label
                                    Text="{Binding Current.Wind, 
                                        StringFormat='Wind : {0:F1} km/h'}"/>
                            </VerticalStackLayout>
                            
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>